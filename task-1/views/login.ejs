<body ng-app="myapp" ng-controller="fristcontroller">

<h2>Login Form</h2>

<form action="http://localhost:4000/home" method="GET">
  <div class="imgcontainer">
    <img src="img_avatar2.png" alt="Avatar" class="avatar">
  </div>

  <div class="container">
   
    <input type="text" placeholder="Enter Username" name="uname" ng-model="username"required>
    <br>
    <input type="password" placeholder="Enter Password" name="psw" ng-model="password" required>
    <br>
    <button type="submit" ng-click="Login(username,password)">Login</button>
  
  </div>

</form>

